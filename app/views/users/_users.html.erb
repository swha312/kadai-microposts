<% if users.any? %>

  <ul class="media-list">
    
<% users.each do |user| %>

    <li class="media">
      <div class="media-left">
        <img class="medai-object img-rounded" src="
<%= gravatar_url(user, {size:50}) %>
 " alt="">
      </div>  
      <div class="media-body">
        <div>
<%= user.name %>
        </div>
        <div>
          <p>
<%= link _to 'View profile', user_path(user) %>
</p>
        </div>
      </div>
    </li>
    
<% end %>
  </ul>

<%= paginate users %>

<% end %>